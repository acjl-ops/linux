 	for_each_object(p, s, addr, page->objects) {
@@ -4061,7 +4073,7 @@ static void list_slab_objects(struct kme
 		}
 	}
 	put_map(map);
-	slab_unlock(page);
+	slab_unlock(page, &flags);
